<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".perfil.PerfilFragment">

    <!-- Ícono de perfil -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_shopping_cart"
        android:layout_marginBottom="24dp"
        android:contentDescription="Perfil de usuario" />

    <!-- Mensaje principal -->
    <TextView
        android:id="@+id/tv_mensaje_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil de Usuario\n\nUsuario: admin\nEmail: admin@tiendaquirquincho.com\n\n¡Próximamente más funciones!"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />
    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:layout_marginTop="32dp" />


</LinearLayout>