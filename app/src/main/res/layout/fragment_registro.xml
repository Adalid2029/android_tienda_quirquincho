<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".autenticacion.RegistroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/tv_label_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese nombre de usuario"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_label_correo_electronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electronico"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_correo_electronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu direccion de correo electronico"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/tv_label_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su contraseña"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_label_nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Completo"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu nombre completo"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_label_numero_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de celular"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_numero_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+591"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>
